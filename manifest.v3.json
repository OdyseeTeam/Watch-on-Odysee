{
  "manifest_version": 3,
  "name": "Watch on Odysee",
  "version": "2.0.0",
  "icons": {
    "16": "assets/icons/wol/icon16.png",
    "48": "assets/icons/wol/icon48.png",
    "128": "assets/icons/wol/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.odysee.com/yt/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/icons/internal/odysee-logo.svg"
    ],
    "matches": [
      "https://www.youtube.com/*",
      "https://yewtu.be/*",
      "https://vid.puffyan.us/*",
      "https://invidio.xamh.de/*",
      "https://invidious.kavin.rocks/*",
      "https://newpipe.net/*"
    ]
  }],
  "action": {
    "default_title": "Watch on Odysee",
    "default_popup": "pages/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://yewtu.be/*",
        "https://vid.puffyan.us/*",
        "https://invidio.xamh.de/*",
        "https://invidious.kavin.rocks/*",
        "https://newpipe.net/*"
      ],
      "js": [
        "scripts/ytContent.js"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker-entry-point.js"
  } 
}
